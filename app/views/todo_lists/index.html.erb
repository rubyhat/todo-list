<div class="card-header d-flex justify-content-between">
  <h4 class="m-0 text-dark">Todo Lists</h4>
  <%= link_to 'New Todo List', new_todo_list_path, class: 'btn btn-primary btn-sm' %>
</div>

<%
=begin%>
 <%= render 'form', todo_list: @todo_list %> 
<%
=end%>

<div class="card-body">
  <ul class="list-group">
    <% @todo_lists.each do |todo_list| %>
    <%= link_to todo_list, class: 'text-decoration-none' do %>
    <li class="list-group-item d-flex justify-content-between mb-2">
      <div>
        <div class="d-flex align-items-center">
          <h5 class="m-0 text-dark">
            <b><%= todo_list.title %></b>
          </h5>
          <h6 class="mb-0 ml-1"><span class="badge badge-<%= todo_list.badge_color %>"><%= todo_list.status %></span></h6>
        </div>

        <p class="text-secondary m-0">
          <small>
            <%= todo_list.percent_complete %>% Complete
            (<%= todo_list.completed_items %>/<%= todo_list.total_items %>) Todo Items
          </small>
        </p>
      </div>
      <div>
        <%= link_to 'Edit', edit_todo_list_path(todo_list), class: 'btn btn-secondary btn-sm' %>
      </div>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>